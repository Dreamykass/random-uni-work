<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ServletDiagram</servlet-name>
        <servlet-class>ServletDiagram</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDiagram</servlet-name>
        <url-pattern>/diagram.mp4</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletInput</servlet-name>
        <servlet-class>ServletInput</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletInput</servlet-name>
        <url-pattern>/input.mp4</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletInputProcessing</servlet-name>
        <servlet-class>ServletInputProcessing</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletInputProcessing</servlet-name>
        <url-pattern>/process.mp4</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>input.mp4</welcome-file>
    </welcome-file-list>
    
</web-app>